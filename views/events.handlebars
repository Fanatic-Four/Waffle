<link href="css/events.css" type="text/css" rel="stylesheet">

<div class="page container">

  <h1>
    Here are the current events happening!
  </h1>

  <div class="col-md-2">

  </div>

  <div class="eventList col-md-8">
    {{#each events}}
      <div class="event">
        {{this.name}}
        {{this.creator}}
        {{this.desc}}
        <ul>
          {{#each this.attendees}}
            <li>
              User: {{this.user}} | Number: {{this.number}}
            </li>
          {{/each}}
        </ul>
      </div>
    {{/each}}
  </div>

  <div class="col-md-2">

  </div>
</div>
